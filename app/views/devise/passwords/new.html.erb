    <section id="wrapper">
        <div class="login-register")>
            <div class="login-box card">
                <div class="card-body">
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:"form-horizontal form-material", id:"loginform" }) do |f| %>
                        <h3 class="box-title m-b-20">Forgot your password?</h3>
                        <%= devise_error_messages! %>
                        <div class="form-group ">
                            <div class="col-xs-12">
                                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Email"  %>
                        </div>
                        <div class="form-group text-center m-t-20">
                            <div class="col-xs-12">
                                <%= f.submit "Send Reset Instructions", :class => "btn btn-info btn-lg btn-block" %>
                            </div>
                        </div>
                        <div class="form-group m-b-0">
                            <div class="col-sm-12 text-center">        
                                <div>Have an account? <%= link_to "Log in", new_session_path(resource_name), class:"text-info m-l-5" %></div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </section>