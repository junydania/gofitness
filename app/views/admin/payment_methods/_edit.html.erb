<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button id='close-modal' type="button" class="close" data-toggle="modal" data-target="#goal-modal" aria-hidden="true">Ã—</button>
            <h4 class="modal-title" id="myModalLabel">Edit </h4> </div>
        <div class="modal-body">
            <%= form_for([:admin, payment_method], remote: true, html: {class: 'form-group m-t-40' }) do |f| %>
                <h4>Edit Payment Method </h4>
                <br/>
                <div class="form-group">
                    <%= f.label :payment_system, 'Payment System' %>
                    <%= f.text_field :payment_system, class: 'form-control form-control-line' %>
                </div>
                <div class="form-group">
                    <%= f.label :discount, 'Discount' %>
                    <%= f.number_field :discount, class: 'form-control form-control-line' %>
                </div>
                <div>
                    <%= f.submit 'Update', class: 'btn btn-danger m-r-10' %>
                </div>
            <% end %>
        </div>
    </div>
</div>



