<div class="col-12" id="filterrific_results">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Member List</h4>
            <h6 class="card-subtitle"></h6>
            <div class="table-responsive">
                <table class="table m-t-30 table-hover contact-list" data-page-size="10">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Customer Code
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Membership Plan </th>
                            <th>Status</th>
                            <th>Expiry Date</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    <% members.each do |member| %>
                        <tr>
                            <td><%= member.id %></td>
                            <td><%= member.customer_code %></td>
                             <% if member.image_data.nil? %>
                                <td>
                                    <%= image_tag( "users/5.png", alt: "member", size:"40", class:"img-circle" ) %><%= link_to "#{member.first_name}" %>
                                </td>
                            <% else %>
                                <td>
                                    <%= image_tag( "#{member.image_url}", alt: "member", size:'40', class:"img-circle" ) %><%= link_to "#{member.first_name}" %>
                                </td>
                            <% end %>
                            <td><%= member.last_name %></td>
                            <td><span><%= member.subscription_plan.plan_name %><span></td>
                            <% if member.account_detail.member_status == "active" %>
                                <td><span class="label label-success"><%= member.account_detail.member_status.titleize %></span> </td>
                            <% else %>
                                <td><span class="label label-danger"><%= member.account_detail.member_status.titleize %></span> </td>
                            <% end %>
                            <td><%= member.account_detail.expiry_date %></td>
                            <td>
                                <%= link_to "View Profile", member_profile_path(member), class:"btn btn-info btn-rounded" %>
                            </td>
                        </tr>
                    <% end %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2">
                                <%= link_to "Add New Member", new_member_path, class:"btn btn-info btn-rounded" %>                                                   
                            </td>                                               
                                    <!-- /.modal-content -->
                                </div>
                                <!-- /.modal-dialog -->
                            </div>
                            <td colspan="7">
                                <div class="text-right">
                                    <%= will_paginate members %>
                                </div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
